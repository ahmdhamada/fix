@model IEnumerable<FixFactorSystem.Models.NewPhone>

@{
    ViewData["Title"] = "Index";
}
<link href="~/PhoneStyleSheet.css" rel="stylesheet" />

<div class="m" style=" background-color: #c7e3f1;">
<div class="features">
    <div class="container">
       
        <div class="title">

            <h1 style="font-family: “Droid Arabic Kufi”, serif;color:blueviolet; text-align: center; margin-left: 400px;">هواتف جديده</h1>


            








                <form class="c" style="margin-left: 400px;" asp-controller="NewPhones" asp-action="Create">

                    <input type="submit" value="اضافه" class="btn btn-primary" />
                </form>


           


            <form class="d" asp-controller="NewPhoneDetails" asp-action="Index">

                <input type="submit" value="مواصفات الأجهزه" class="btn btn-success" />
            </form>


        </div>
    </div>
</div>


<div class="crr" >
    <div class="container" >
        <div class="row" style="width: 87%; text-align:right">
            @foreach (var item in Model)
            {
                <div class="col-4" >


                    <div class="card bg-primary" style="height:500px;width:300px;float:left;margin:2px; ">
                        <div class="card-img">
                            <img class="card-img-top" style="height:250px;width:300px;" src="@("/Mobimg/" + item.Image)    ">
                        </div>
                        <div class="card-body" style="font-weight:bold;">
                            <h5 class="card-title text-black" style=" color: white; font-weight:bold;">   @Html.DisplayFor(modelItem => item.MobName): النوع  </h5>
                            <h5 class="card-text" style=" color: white; font-weight:bold;">     @Html.DisplayFor(modelItem => item.Ram):  الرام</h5>
                            <h5 class="card-text" style=" color: white; font-weight:bold;">       @Html.DisplayFor(modelItem => item.Storage): التخزين</h5>
                            <h5 class="card-text" style=" color: white; font-weight:bold;">     السعر :  @Html.DisplayFor(modelItem => item.Price)  جنيه</h5>


                          
                         
                            <!--   <a asp-controller="NewPhoneDetails"
    asp-action="Index"> Details</a>-->
                            <tr>
                                <td>
                                    <a asp-action="Edit" style="color:brown" asp-route-id="@item.Id">تعديل</a> |
                                    <a asp-action="Details"style="color:brown" asp-route-id="@item.Id">تفاصيل</a> |
                                    <a asp-action="Delete" style="color:brown" asp-route-id="@item.Id">مسح</a>
                                </td>
                            </tr>
                        </div>

                    </div>

                   
                </div>
            }



        </div>
    </div>

</div>

    </div>

