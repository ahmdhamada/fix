@model FixFactorSystem.Models.Maintenence

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h2 style="color:blueviolet; margin:20px;font-weight:bold">تعديل مواصفات الهاتف</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DamageId" />
                <div class="form-group">
             نوع الهاتف
                    <input asp-for="DamMobName" class="form-control" />
                    <span asp-validation-for="DamMobName" class="text-danger"></span>
                </div>
                <div class="form-group">
              وصف العطل
                    <input asp-for="DamageDescription" class="form-control" />
                    <span asp-validation-for="DamageDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                صورة العطل
                    <input type="file" name="File" asp-for="File" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <div class="form-group">
                اسم صاحب الهاتف
                    <input asp-for="PhoneOwner" class="form-control" />
                    <span asp-validation-for="PhoneOwner" class="text-danger"></span>
                </div>
                <div class="form-group">
              رقم هاتف صاحب العطل
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="حفظ" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">عودة</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    </div>