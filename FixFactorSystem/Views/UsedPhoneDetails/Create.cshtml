@model FixFactorSystem.Models.UsedPhoneDetails

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 style="color:blueviolet; margin:20px;font-weight:bold">اضافة هاتف مستعمل</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                  النوع
                    <input asp-for="MobNameu" class="form-control" />
                    <span asp-validation-for="MobNameu" class="text-danger"></span>
                </div>
                <div class="form-group">
                  الرام
                    <input asp-for="Ramu" class="form-control" />
                    <span asp-validation-for="Ramu" class="text-danger"></span>
                </div>
                <div class="form-group">
                التخزين
                    <input asp-for="Storageu" class="form-control" />
                    <span asp-validation-for="Storageu" class="text-danger"></span>
                </div>
                <div class="form-group">
             الكاميرا
                    <input asp-for="Camerau" class="form-control" />
                    <span asp-validation-for="Camerau" class="text-danger"></span>
                </div>
                <div class="form-group">
               صورة
                    <input type="file" name="File" asp-for="File" class="form-control" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                <div class="form-group">
                اللون
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group">
            الشاشة
                    <input asp-for="Display" class="form-control" />
                    <span asp-validation-for="Display" class="text-danger"></span>
                </div>
                <div class="form-group">
             البطارية
                    <input asp-for="Battary" class="form-control" />
                    <span asp-validation-for="Battary" class="text-danger"></span>
                </div>
                <div class="form-group">
                مواصفات اخرى
                    <input asp-for="AddDetails" class="form-control" />
                    <span asp-validation-for="AddDetails" class="text-danger"></span>
                </div>
                <div class="form-group">
               السعر
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="اضافة" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a style="color:blueviolet" asp-action="Index">عودة</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
